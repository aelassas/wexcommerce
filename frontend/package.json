{
  "name": "wexcommerce-frontend",
  "description": "Public web frontend for wexCommerce (customer-facing website)",
  "private": true,
  "version": "3.3.0",
  "type": "module",
  "scripts": {
    "install:reactjs-social-login": "cd ../packages/reactjs-social-login && npm i",
    "install:dependencies": "npm run install:reactjs-social-login",
    "ts:build": "npm run install:dependencies && tsc --build --verbose",
    "dev": "npm run ts:build && next dev --turbo -p 8006",
    "ts:docker-build": "tsc --build --verbose",
    "dev:docker": "npm run ts:docker-build && next dev -p 8006",
    "build": "rimraf .next && npm run ts:build && cross-env NODE_OPTIONS=--max-old-space-size=1024 next build",
    "start": "next start -p 8006",
    "lint": "next lint",
    "fix": "next lint --fix",
    "ncu": "ncu -u",
    "stylelint": "stylelint \"**/*.css\"",
    "stylelint:fix": "stylelint \"**/*.css\" --fix"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.1.2",
    "@mui/material": "^7.1.2",
    "@mui/x-date-pickers": "^8.5.3",
    "@paypal/react-paypal-js": "^8.8.3",
    "@sindresorhus/slugify": "^2.2.1",
    "@stripe/react-stripe-js": "^3.7.0",
    "@stripe/stripe-js": "^7.3.1",
    "date-fns": "^4.1.0",
    "github-fork-ribbon-css": "^0.2.3",
    "localized-strings": "^2.0.3",
    "next": "15.3.4",
    "next-nprogress-bar": "^2.4.7",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-ga4": "^2.1.0",
    "react-slick": "^0.30.3",
    "react-toastify": "^11.0.5",
    "slick-carousel": "^1.8.1",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.3.4",
    "@types/node": "^24",
    "@types/react-slick": "^0.23.13",
    "@types/validator": "^13.15.2",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "babel-plugin-react-compiler": "^19.1.0-rc.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.29.0",
    "eslint-config-next": "15.3.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "^19.1.0-rc.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "npm-check-updates": "^18.0.1",
    "rimraf": "^6.0.1",
    "stylelint": "^16.21.0",
    "stylelint-config-standard": "^38.0.0"
  }
}
